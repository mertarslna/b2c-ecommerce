# Docker Environment Variables
NODE_ENV=development

# Database Configuration (Docker)
DATABASE_URL="postgresql://postgres:postgres_dev_password@postgres:5432/ecommerce_db_dev?schema=public"
POSTGRES_DB=ecommerce_db_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_dev_password

# Redis Configuration (Docker)
REDIS_URL="redis://redis:6379"

# Stripe Configuration (GitHub'a yükleme - gerçek değerleri .env dosyasına koy)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# App Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Email Configuration (Mailhog for development)
EMAIL_FROM=noreply@ecommerce.local
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
